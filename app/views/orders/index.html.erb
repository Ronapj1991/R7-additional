<h1>Orders</h1>

<div id="orders" class="container-fluid  row">
    <% @orders.each do |order| %>
        <div class="col-sm">
            <div class="card border border-2 border-success p-1 mt-3" style="max-width: 18rem;">
                <%= render partial: "orders/deleteModal", locals: {order: order} %>
                <%= render order %>
            </div>
        </div>
    <% end %>
</div>

<%= link_to "New Order", new_order_path %>